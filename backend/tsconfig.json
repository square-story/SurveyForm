{
  //  "extends": "../shared/tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "shared/*": [
        "../shared/*"
      ],
      "@shared/*": [
        "../shared/types/*"
      ]
    },
    "lib": ["ES2022", "DOM"],
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "pretty": true,
    "noEmit": false,
    "noErrorTruncation": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "typeRoots": [
    "./node_modules/@types",
    "./types/**/*.d.ts"
  ],
  "include": [
    "src/**/*",
    "./types/**/*.d.ts",
    "../shared/types/**/*.d.ts",
    "types",
    "../shared/types/**/*.ts",
    "types"
  ]
}